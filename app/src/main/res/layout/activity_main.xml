<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/forward_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:text="@string/Forward"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backward_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="36dp"
        android:text="@string/Backward"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/left_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="120dp"
        android:text="@string/Left"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/right_id"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="120dp"
        android:text="@string/Right"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/left_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="105dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:text="@string/temp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/right_id"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toEndOf="@+id/forward_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_temp_id"
        android:layout_width="38dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtview"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>